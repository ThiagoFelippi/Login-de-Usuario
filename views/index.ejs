<%- include("partials/header.ejs") %>

<div class="container d-flex flex-column justify-content-center align-items-center">

<div class="jumbotron mt-5">
  <h1 class="display-4">Praticando Autenticação</h1>
  <p class="lead">Página de autenticação utilizando bcrypt, passport, session, etc.</p>
  <hr class="my-4">
</div>

  <h2 class="mt-3">Página de login</h2>
  <% if(messages.error) { %>
    <div class="alert alert-danger w-50 my-3" role="alert">
      <%= messages.error %>
    </div>
  <% } %>
  <form action="/login" method="POST" class="w-50 mt-3">
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Senha</label>
      <input name="password" type="password" class="form-control" id="exampleInputPassword1">
    </div>
    <small class="">
      Caso não tenha uma conta <a href="/register"> Crie uma </a>
    </small> <br>
    <button type="submit" class="btn btn-primary mt-4">Entrar</button>
  </form>
  


</div>

<%- include("partials/footer.ejs") %>
